void fun1() {
    char Variable;

    Variable = xx;
    switch (Variable) {
    case Value1:
        代码1;
        break;//跳出switch循环：即直接跳到代码5（第22行）

    case Value2:
        代码2;
        continue;//跳出本次switch循环：即直接跳回switch处（第5行）

    case Value3:
        代码3;
        return;//跳出fun1()函数

    default:
        代码4;
        break;
    }
    代码5;
}
